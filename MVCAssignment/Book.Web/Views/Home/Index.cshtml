@model IEnumerable<Book.BL.ReadingEvent>
    @{
        ViewData["Title"] = "Home Page";
    }

    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Upcoming Events</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Date
                        </th>
                        <th>Event Name</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {@if (item.Date >= DateTime.Now)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <tr>
                                <td>@item.Date</td>
                                <td><a asp-action="Details" asp-controller="ReadingEvent" asp-route-id=@item.Id>@item.Title </a></td>
                            </tr>
                        }
                        else if (item.Type == 0)
                        {
                            <tr>
                                <td>@item.Date</td>
                                <td><a asp-action="Details" asp-controller="ReadingEvent" asp-route-id=@item.Id>@item.Title </a></td>
                            </tr>
                        }
                    }
                }
            </table>
        </div>
        <div class="col-md-6">
            <h2 class="text-center">Past Events</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Date
                        </th>
                        <th>Event Name</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    @if (item.Date < DateTime.Now)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <tr>
                                <td>@item.Date</td>
                                <td><a asp-action="Details" asp-controller="ReadingEvent" asp-route-id=@item.Id>@item.Title </a></td>
                            </tr>
                        }
                        else if (item.Type == 0)
                        {
                            <tr>
                                <td>@item.Date</td>
                                <td><a asp-action="Details" asp-controller="ReadingEvent" asp-route-id=@item.Id>@item.Title </a></td>
                            </tr>
                        }
                    }
                }
            </table>
        </div>
    </div>
